<?php

namespace [NAMESPACE];

use Laraview\Libs\Blueprints\ElementBlueprint;
use Laraview\Libs\Elements\Select;

class [CLASS_NAME] extends Select implements ElementBlueprint
{

    /**
     * @var string
     */
    protected $name = '[NAME]';

    /**
     * @var string
     */
    protected $label = '[LABEL]';

    /**
     * Element attributes
     * @var array
     */
    protected $attributes = [
        [ATTRIBUTES]
    ];

    /**
     * Select options
     * @var array
     */
    protected $options = [
        [OPTIONS]
    ];

    /**
     * @return mixed
     */
    public function value()
    {
        return old( $this->name ) ?: (string) $this->data( "model.{$this->name}" );
    }

    /**
     * @param $model
     * @param $request
     */
    public function receivePayload( $model, $request )
    {
        $model->{$this->name} = $request->input( $this->name );
    }

}
